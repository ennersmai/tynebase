# Server Configuration
PORT=8080
NODE_ENV=development
LOG_LEVEL=info

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co


# Old Supabase Keys (deprecated - kept for backward compatibility during transition)
# SUPABASE_ANON_KEY=your-anon-key
# SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_GLOBAL=100
RATE_LIMIT_WINDOW_GLOBAL=600000
RATE_LIMIT_AI=10
RATE_LIMIT_WINDOW_AI=60000


# Google Cloud Vertex AI Configuration (for Gemini models)
# Option 1: Use base64-encoded service account JSON (recommended for production)
# Encode your service account JSON: cat service-account.json | base64
GCP_SERVICE_ACCOUNT_JSON=base64_encoded_json_here
# Option 2: Use service account JSON file path
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json
# Option 3: Use gcloud auth application-default login (for development)
# Your Google Cloud project ID (optional if included in service account JSON)
GOOGLE_CLOUD_PROJECT=your-gcp-project-id

# Video Processing Configuration
# Delete video files from storage after successful transcription (true/false)
DELETE_VIDEO_AFTER_PROCESSING=false

