# Server Configuration
PORT=8080
NODE_ENV=development
LOG_LEVEL=info

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_GLOBAL=100
RATE_LIMIT_WINDOW_GLOBAL=600000
RATE_LIMIT_AI=10
RATE_LIMIT_WINDOW_AI=60000

# AWS Bedrock Configuration
# Used for Claude, DeepSeek, and Cohere models via Amazon Bedrock
# For embeddings: cohere.embed-v4:0 (1536 dimensions)
# For reranking: cohere.rerank-v3-5:0
AWS_BEDROCK_API_KEY=your-aws-bedrock-api-key
AWS_REGION=eu-west-2

# Google Cloud Vertex AI Configuration (for Gemini models)
# Option 1: Use service account JSON (recommended for production)
# Set path to service account key file
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json
# Option 2: Use gcloud auth application-default login (for development)
# Your Google Cloud project ID
GOOGLE_CLOUD_PROJECT=your-gcp-project-id

# Video Processing Configuration
# Delete video files from storage after successful transcription (true/false)
DELETE_VIDEO_AFTER_PROCESSING=false

# Tavily API Configuration
# Used for URL scraping and content extraction
TAVILY_API_KEY=your-tavily-api-key
